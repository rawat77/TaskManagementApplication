@model IEnumerable<TaskManagementApplication.Models.Tasks>
@{
    ViewData["Title"] = "Filtered Tasks";
}

<h2>@ViewData["Title"]</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Due Date</th>
            <th>Assigned To</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>@task.DueDate.ToShortDateString()</td>
                <td>@task.AssignedTo?.Name</td>
            </tr>
        }
    </tbody>
</table>
